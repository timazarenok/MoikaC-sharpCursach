<Window x:Class="MoikaStatistic.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoikaStatistic"
        mc:Ignorable="d"
        Title="Админ" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="Employers" Content="Сотрудники" Width="150" Height="30" Click="Employers_Click"/>
            <Button x:Name="Services" Content="Услуги" Width="150" Height="30" Click="Services_Click"/>
            <Button x:Name="Reviews" Content="Отзывы" Width="150" Height="30" Click="Reviews_Click"/>
            <Button x:Name="NewEmployer" Content="Создать нового сотрудника" Height="30" Click="NewEmployer_Click" />
        </StackPanel>
        <Button x:Name="Exit" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="120" Height="30" Margin="30,0,0,30" Click="Exit_Click">Выход</Button>
    </Grid>
</Window>
